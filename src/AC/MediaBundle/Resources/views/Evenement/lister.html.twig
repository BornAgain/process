{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->     
    <link href="{{ asset('m_assets/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('m_assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />    
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock%}

{% block breadcrumb %}
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Media</span>
        </li>
    </ul>
{% endblock %}
{% block content %}
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-blue-hoki"></i>
                <span class="caption-subject font-blue-hoki bold uppercase">LISTING</span>
                <span class="caption-helper">Page</span>
            </div>
            <div class="tools">
                <a id="sample_editable_1_new" class="btn sbold green" href="{{ path("ac_media_bundle_evenement_ajouter") }}"  style="height: 36px"> Add New
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light ">            
            <div class="portlet-body">
                
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" /> </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Theme
                            </th>
                            <th>
                                Types
                            </th>
                            <th>
                                Orateur
                            </th>                                        
                            <th>
                                Modifier
                            </th>
                            <th>
                                Supprimer
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for entity in entities %} 
                            <tr class="odd gradeX">
                                <td>
                                    <input type="checkbox" class="checkboxes" value="1" /> </td>
                                <td>
                                    {{ entity.date|date('d-m-Y')}}
                                </td>
                                <td>
                                    <a href="{{ path("ac_media_bundle_evenement_voir",{'id':entity.id})}}">{{ entity.theme}}</a>
                                </td>

                                <td>
                                    {{ entity.type}}
                                </td>
                                <td>
                                    {{ entity.orateur.name}}
                                </td>                                             
                                <td>

                                    <a href="{{ path("ac_media_bundle_evenement_modifier",{'id':entity.id}) }}"><button class="btn btn-primary btn-xs" ><i class="fa fa-edit"></i></button></a>
                                </td>
                                <td> 
                                    <a href="{{ path("ac_media_bundle_evenement_supprimer",{'id':entity.id}) }}"><button class="btn btn-danger btn-xs" ><i class="fa fa-trash-o "></i></button></a>

                                </td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('m_assets/global/scripts/datatable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js') }}" type="text/javascript"></script>

    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('m_assets/pages/scripts/table-datatables-managed.min.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %} 