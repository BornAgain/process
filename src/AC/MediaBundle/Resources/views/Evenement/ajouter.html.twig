{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('m_assets/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('m_assets/global/plugins/typeahead/typeahead.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock%}

{% block breadcrumb %}
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Media</span>
        </li>
    </ul>
{% endblock %}
{% block content %}
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-blue-hoki"></i>
                <span class="caption-subject font-blue-hoki bold uppercase">AJOUT</span>
                <span class="caption-helper">Evénement</span>
            </div>
            <div class="tools">
                <a class="btn green" data-toggle="modal" href="#large" style="height: 36px"><i class="fa fa-upload"></i> Upload des fichiers </a>

            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            {{ form_start(form, {'method': 'POST'}) }}
            <div class="form-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Thème <span class="required">*</label>
                            {{ form_widget(form.theme, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Thème : Sous thème'}}) }}
                            <span class="help-block"> This is inline help </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Date<span class="required">*</label>
                            <div class="input-group date form_datetime">
                                {{ form_widget(form.date, {'attr': {'class': 'form-control col-md-7 col-xs-12 date','placeholder':'dd/mm/yyyy'}}) }}
                                <span class="input-group-btn">
                                    <button class="btn default date-set" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Type <span class="required">*</label>
                            {{ form_widget(form.type, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            <span class="help-block"> This is inline help </span>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Orateur <span class="required">*</label>
                            {{ form_widget(form.orateur, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            <span class="help-block"> This is inline help </span>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Conducteur <span class="required">*</label>
                            {{ form_widget(form.conducteur, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            <span class="help-block"> This is inline help </span>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <div><label class="control-label">Mots clé</label><div>
                            {{ form_widget(form.tags, {'attr': {'class': 'form-control col-md-7 col-xs-12 tags','data-role':'tagsinput'}}) }}
                            <span class="help-block"> This is inline help </span>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
            </div>
            <div class="form-actions right">
                <button type="button" class="btn default">Cancel</button>
                <button type="submit" class="btn blue">
                    <i class="fa fa-check"></i> Save</button>
            </div>
            {{ form_end(form) }}            
            <!-- END FORM-->
        </div>
    </div>
    <div class="modal fade bs-modal-lg" id="large" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Upload des fichiers</h4>
                </div>
                <div class="modal-body"> Modal body goes here </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('m_assets/global/plugins/bootstrap-daterangepicker/moment.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/bootstrap-daterangepicker/daterangepicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/clockface/js/clockface.js') }}" type="text/javascript"></script>

    <script src="{{ asset('m_assets/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/typeahead/handlebars.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('m_assets/global/plugins/typeahead/typeahead.bundle.min.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %} 